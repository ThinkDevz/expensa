<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.SubBase">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Archive" parent="AppTheme.SubBase">
        <item name="colorPrimary">@color/colorArchive</item>
        <item name="colorPrimaryDark">@color/colorArchiveDark</item>
        <item name="android:colorPrimary">@color/colorArchive</item>
        <item name="android:colorPrimaryDark">@color/colorArchiveDark</item>
    </style>

    <style name="AppTheme.SubBase" parent="AppTheme.Base">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorControlHighlight">@color/colorHighlight</item>
        <!--<item name="android:actionModeCloseButtonStyle">@color/colorPrimaryDark</item>-->
        <!--<item name="android:actionModeStyle">@style/ActionBarPopupThemeOverlay</item>-->
        <item name="android:actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

</resources>